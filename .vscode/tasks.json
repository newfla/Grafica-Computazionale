{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compileCrono",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++11",
                "./crono/cronometro.cpp",
                "./crono/Quadrante.cpp",
                "./crono/Tasto.cpp",
                "./crono/Lancetta.cpp",
                "-lmingw32",
                "-lopengl32",
                "-lglut32",
                "-lglu32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compileCasa",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++11",
                "./casa/casetta.cpp",
                "./casa/Point.cpp",
                "./casa/Face.cpp",
                "./casa/Figure.cpp",
                "-lmingw32",
                "-lopengl32",
                "-lglut32",
                "-lglu32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}